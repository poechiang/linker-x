{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/types/*.d.ts",
    "src/**/*",
    "src/**/*.tsx",
    "src/**/*.json",
    "src/**/*.svg"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": ["node", "vite/client", "@electron-toolkit/preload"],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@pages/*": ["./src/pages/*"]
    }
  }
}
